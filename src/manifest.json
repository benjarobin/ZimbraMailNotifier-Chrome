{
	"manifest_version": 2,
	"name": "__MSG_extName__",
	"version": "1.0.0",
	"default_locale": "en",
	"description": "__MSG_extDescription__",
	"browser_action": {
		"default_icon": "skin/images/zimbra_mail_notifier.png",
		"default_popup": "popup.html"
	},
	"icons": {
		"128": "skin/images/zimbra_mail_notifier.png"
	},
	"permissions": [ 
		"tabs", 
		"notifications", 
		"cookies", 
		"chrome://favicon/", 
		"http://*/", 
		"https://*/",  
		"contextMenus", 
		"webNavigation",
		"storage"
	],
	"optional_permissions": [ 
		"background" 
	],
	"background": {
		"persistent": false,
		"page": "background.html"
  	},
	"options_page": "options.html",
	"web_accessible_resources": [
	    "skin/images/zimbra_mail_notifier.png"
	  ]
}
